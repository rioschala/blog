---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="text-[1.5rem] leading-[2rem] font-semibold mb-6 rainbow-text">Hi, people!!</h1>
		<p class="mb-4">
			This blog is, and will continue to be, a place to share my <b><span class="rainbow-text " >discoveries, breakthroughs and thoughts </span> </b> about the learning process. Join me in exploring a new world of infinite possibilities when it comes to Computer Science and multiple topics regarding technology. 
		</p>
		<p>
			Explore the different posts available. You can navigate using the tags or the embedded search panel.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
